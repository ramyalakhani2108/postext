{
  "manifest_version": 3,
  "name": "AI-Powered Postman Extension",
  "version": "1.0",
  "description": "An AI-powered API testing tool like Postman with OpenAI integration",
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Open Sidebar",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar/*"],
      "matches": ["<all_urls>"]
    }
  ]
}